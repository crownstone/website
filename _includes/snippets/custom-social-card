	{% capture social_image %}{{ site.production_url }}/images/crownstone-social-card.jpg{% endcapture %}
{% endif %}

{% if page.custom-linkedin-card %}

	<!-- Linkedin social card -->
	<meta property='og:title' content="{{ page.linkedin-social_title }}">
